<section class="yze-setting-switcher">
  <header class="yze-header">
    <h2>YZE Core â€” Setting Switcher</h2>
    <p class="hint">
      Settings define attributes, skills, and rules for this game. Only one may be active at a time.
    </p>
    <p class="hint">
      Active: {{#if active}}{{active.name}} ({{active.id}}){{else}}None{{/if}}
    </p>
    <p class="hint">
      Persisted: {{#if persisted}}{{persisted.name}} ({{persisted.id}}){{else}}None{{/if}}
    </p>
  </header>

  {{#if settings.length}}
    <div class="yze-list">
      {{#each settings as |s|}}
        <div class="yze-row">
          <div class="yze-label">{{s.name}} ({{s.id}})</div>
          {{#if s.isActive}}
            <button type="button" class="yze-btn yze-btn-deactivate" data-action="deactivate" data-id="{{s.id}}">
              Deactivate
            </button>
          {{else}}
            <button type="button" class="yze-btn yze-btn-activate" data-action="activate" data-id="{{s.id}}">
              Activate
            </button>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="hint">No settings registered.</p>
  {{/if}}
</section>
